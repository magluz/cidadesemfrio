<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E6E6E6"
             x:Class="Citysemcode.Cidade"
             Title="Lista de Cidades"
             BackgroundImage="Imagens/TelaInicial.jpg">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Cidades" ItemSelected="Cidades_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="NomeCidade">
                        <ImageCell Text="{Binding Nome}" TextColor="Black"></ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>