<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E6E6E6"
             x:Class="Citysemcode.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login" FontSize="25"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            
            <Label Text="Nome"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            
            <Entry x:Name="UsuarioLogin"></Entry>
            
            <Label Text="Senha"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            
            <Entry x:Name="SenhaLogin"  IsPassword ="True"></Entry>
            
            <Button Text="Entrar" Clicked="Entrar"></Button>
           
            <Button Text="Cadastre-se" Clicked="Cadastrar"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>