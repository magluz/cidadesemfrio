<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E6E6E6"
             x:Class="Citysemcode.Login"
             Title="Login"
             BackgroundImage="telaloginnova.jpg">
    <ContentPage.Content>
        <StackLayout Padding="0, 160, 0, 0">
            <!--<Label Text="Login" FontSize="25"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />-->
            
            <Label Text="Email"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#426CD8"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />

            <Entry x:Name="EmailLogin" TextColor="#426CD8"></Entry>

            <Label Text="Senha"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#426CD8"
           VerticalOptions="Fill" 
           HorizontalOptions="Center"/>

            <Entry x:Name="SenhaLogin"  IsPassword ="True" TextColor="#426CD8"></Entry>

            <Button Text="Entrar" Clicked="Entrar" BackgroundColor="#426CD8" TextColor="White"></Button>

            <Button Text="Cadastre-se" Clicked="Cadastrar" BackgroundColor="#426CD8" TextColor="White"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>